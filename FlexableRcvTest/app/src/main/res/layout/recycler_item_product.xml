<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeightLarge"
        android:background="?android:attr/selectableItemBackground"
        android:theme="@style/AppTheme.BaseMaterial">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/materialTextView"
                android:layout_height="@dimen/icon_width"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/icon_height"
                android:layout_marginEnd="@dimen/margin_small"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="@{String.valueOf(product.getCount())}"
                android:textAlignment="center"
                android:textColor="@color/material_text_color_white_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox"
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:layout_marginStart="@dimen/margin_left"
                android:buttonTint="@color/colorPrimary_light"
                android:background="@drawable/custom_ripple"
                app:checked="@{product.isChecked()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView

                android:id="@+id/subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_bottom_small"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="?primaryTextSelector"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintEnd_toStartOf="@+id/materialTextView"
                app:layout_constraintStart_toEndOf="@+id/checkbox"
                app:layout_constraintTop_toBottomOf="@+id/title"
                tools:text="@{product.getProductCode()}" />

            <com.google.android.material.textview.MaterialTextView

                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_marginEnd="@dimen/margin_small"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="?primaryTextSelector"


                app:layout_constraintEnd_toStartOf="@+id/materialTextView"
                app:layout_constraintStart_toEndOf="@+id/checkbox"
                app:layout_constraintTop_toTopOf="@+id/checkbox"
                tools:text="@{String.valueOf(product.getProductId())}" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <data>

        <variable
            name="product"
            type="com.emrhmrc.flexablercvtest.depoQr.model.Product" />

    </data>


</layout>